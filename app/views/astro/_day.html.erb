<section class="flex flex-inline items-center justify-center">
    <button data-action="click->location#previousDay" class="bg-blue-100 p-3 font-extra rounded text-xs"> &lt; &lt; </button>
    <% if @app == 'moon' %><div class="rulingPlanet hidden ml-3"></div><% end %>
    <div data-action="click->location#goToToday" data-location-target="date" data-date="" class="w-15 <%= @app == 'moon' ? 'w-15 py-5 mr-5' : 'p-5' %> cursor-pointer">date</div>
    <button data-action="click->location#nextDay" class="bg-blue-100 p-3 font-extra rounded text-xs"> &gt; &gt; </button>
</section>